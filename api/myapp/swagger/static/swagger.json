{
    "openapi": "3.0.0",
    "info": {
      "title": "Digest Africa",
      "description": "API documentation for investments and deals",
      "version": "1.0"
    },
    "paths": {
      "/api/v1/get_all_inv/": {
        "get": {
          "summary": "Retrieve a list of deals",
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/deals"
                    }
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create a new deal",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Investment"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Investment created successfully"
            }
          }
        }
      },
      "/deals": {
        "get": {
          "summary": "Retrieve a list of deals",
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Deal"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "deals": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64"
            },
            "when": {
              "type": "string",
              "format": "Date"
            },
            "company": {
              "type": "string"
            },"amount": {
                "type": "integer",
                "format": "int64"
              },
              "funding_round": {
                "type": "string"
              },
              "investors": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "created_at": {
                "type": "string",
                "format": "Date"
              },
              "updated_at": {
                "type": "string",
                "format": "Date"
              },"user_id": {
                "type": "integer",
                "format": "int64"
              },
              "company_slug": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },"publish": {
                "type": "string"
              },
              "valuation_note": {
                "type": "string"
              },
              "year": {
                "type": "number",
                "format": "float"
              },"qurter": {
                "type": "string"
              },
              "selected_country": {
                "type": "string"
              }
          }
        },
        "Deal": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64"
            },
            "name": {
              "type": "string"
            },
            "status": {
              "type": "string",
              "enum": ["Pending", "Approved", "Rejected"]
            }
          }
        }
      }
    }
  }
  