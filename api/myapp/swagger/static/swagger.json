{
    "openapi": "3.0.0",
    "info": {
      "title": "Digest Africa",
      "description": "API documentation for investments and deals",
      "version": "1.0"
    },
    "paths": {
      "/api/v1/get_all_inv/": {
        "get": {
          "summary": "Retrieve a list of deals",
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Investment"
                    }
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create a new deal",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Investment"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Investment created successfully"
            }
          }
        }
      },
      "/deals": {
        "get": {
          "summary": "Retrieve a list of deals",
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Deal"
                    }
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create a new deal",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Deal"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Deal created successfully"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Investment": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64"
            },
            "name": {
              "type": "string"
            },
            "amount": {
              "type": "number",
              "format": "float"
            }
          }
        },
        "Deal": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64"
            },
            "name": {
              "type": "string"
            },
            "status": {
              "type": "string",
              "enum": ["Pending", "Approved", "Rejected"]
            }
          }
        }
      }
    }
  }
  